<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Heading1" parent="BaseTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BodyText" parent="BaseTextStyle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CaptionText" parent="BaseTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CoverageText" parent="BaseTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:background">@drawable/bg_uncovered</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>

    <style name="EditTextTheme" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/edit_text_color</item>
        <item name="android:textColorHint">@color/edit_text_hint_color</item>
        <item name="android:background">@drawable/rounded_edittext_background</item>
        <item name="android:padding">10dp</item>
    </style>
</resources>